{
  "task": "pansharpening"  //  root/task/images-models-options
  , "model": "pansharpening"
  , "gpu_ids": [3,5,6,7]
  , "dist": true    //DDP
  , "scale": 4       // broadcast to "netG" if SISR
  , "n_channels": 4  // broadcast to "datasets", 1 for grayscale, 3 for color
  
  , "merge_bn": false
  , "merge_bn_startpoint": 400000

  , "path": {
    "root": "pansharpening"
    , "pretrained_netG": null      // path of pretrained model
  }

  , "datasets": {
    "train": {
      "name": "train_dataset"           // just name
      , "dataset_type": "pansharpening"
      , "dataroot_gt": "/disk4/yw/hit_cvlab/dataset/train_wv3/gt/"
      , "dataroot_ms": "/disk4/yw/hit_cvlab/dataset/train_wv3/ms/"
      , "dataroot_lms": "/disk4/yw/hit_cvlab/dataset/train_wv3/lms/"
      , "dataroot_pan": "/disk4/yw/hit_cvlab/dataset/train_wv3/pan/"
    
      , "dataloader_shuffle": true
      , "dataloader_num_workers": 64
      , "dataloader_batch_size": 256     // batch size 1 | 16 | 32 | 48 | 64 | 128
    }
    , "test": {
      "name": "test_dataset"
      , "dataset_type": "pansharpening"
      , "dataroot_gt": "/disk4/yw/hit_cvlab/dataset/test_wv3/reduced_examples/gt/"
      , "dataroot_ms": "/disk4/yw/hit_cvlab/dataset/test_wv3/reduced_examples/ms/"
      , "dataroot_lms": "/disk4/yw/hit_cvlab/dataset/test_wv3/reduced_examples/lms/"
      , "dataroot_pan": "/disk4/yw/hit_cvlab/dataset/test_wv3/reduced_examples/pan/"
  }
  }

  , "netG": {
    "net_type": "naf"
    , "in_channels": 8
    , "dim": 64
    , "out_channels": 8
    , "scale": 4
    , "block_num": 16

    , "init_type": "orthogonal"         // "orthogonal" | "normal" | "uniform" | "xavier_normal" | "xavier_uniform" | "kaiming_normal" | "kaiming_uniform"
    , "init_bn_type": "uniform"         // "uniform" | "constant"
    , "init_gain": 0.2
  }

  , "train": {
    "G_lossfn_type": "l1"               // "l1" preferred | "l2sum" | "l2" | "ssim"
    , "G_lossfn_weight": 1.0            // default

    , "G_optimizer_type": "adam"        // fixed, adam is enough
    , "G_optimizer_lr": 2e-4           // learning rate
    , "G_optimizer_clipgrad": null      // unused

    , "G_scheduler_type": "MultiStepLR" // "MultiStepLR" is enough
    , "G_scheduler_milestones": [20000, 40000, 60000, 80000, 100000, 200000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null    // unused
    , "G_regularizer_clipstep": null    // unused

    , "checkpoint_test": 5000           // for testing
    , "checkpoint_save": 5000           // for saving model
    , "checkpoint_print": 200           // for print
  }
}
