{
  "task": "pansharpening"  //  root/task/images-models-options
  , "model": "pansharpening"
  , "gpu_ids": [0]


  , "merge_bn": false
  , "merge_bn_startpoint": 400000

  , "path": {
    "root": "pansharpening"
    , "pretrained_netG": null      // path of pretrained model
  }

  , "datasets": {
    "train": {
      "name": "train_dataset"           // just name
      , "dataset_type": "mdcun"
      , "dataroot_gt": ""
      , "dataroot_ms": ""
      , "dataroot_lms": ""
      , "dataroot_pan": ""

      , "dataloader_shuffle": true
      , "dataloader_num_workers": 8
      , "dataloader_batch_size": 64     // batch size 1 | 16 | 32 | 48 | 64 | 128
    }
    , "test": {
      "name": "test_dataset"
      , "dataroot_gt": ""
      , "dataroot_ms": ""
      , "dataroot_lms": ""
      , "dataroot_pan": ""
  }
  }

  , "netG": {
    "net_type": "mdcun"
  , "in_channels": 4
  , "middle_channels": 64
  , "out_channels": 4

   // , "init_type": "orthogonal"         // "orthogonal" | "normal" | "uniform" | "xavier_normal" | "xavier_uniform" | "kaiming_normal" | "kaiming_uniform"
   // , "init_bn_type": "uniform"         // "uniform" | "constant"
   // , "init_gain": 0.2
  }

  , "train": {
    "G_lossfn_type": "l1"               // "l1" preferred | "l2sum" | "l2" | "ssim"
    , "G_lossfn_weight": 1.0            // default

    , "G_optimizer_type": "adam"        // fixed, adam is enough
    , "G_optimizer_lr": 5e-4           // learning rate
    , "G_optimizer_clipgrad": null      // unused

    , "G_scheduler_type": "MultiStepLR" // "MultiStepLR" is enough
    , "G_scheduler_milestones": [200000, 400000, 600000, 800000, 1000000, 2000000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null    // unused
    , "G_regularizer_clipstep": null    // unused

    , "checkpoint_test": 5000           // for testing
    , "checkpoint_save": 5000           // for saving model
    , "checkpoint_print": 200           // for print
  }
}
